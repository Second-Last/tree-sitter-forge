{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "forge",
      "camelcase": "Forge",
      "title": "Forge",
      "scope": "source.forge",
      "file-types": [
        "frg"
      ],
      "highlights": "queries/highlights.scm",
      "injection-regex": "^(forge|froglet)$",
      "class-name": "TreeSitterForge"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Tree-sitter parser for Forge, a language for teaching introductory formal methods and modeling.",
    "authors": [
      {
        "name": "Gavin Zhao",
        "email": "gavinz@brown.edu",
        "url": "https://github.com/Second-Last"
      }
    ],
    "links": {
      "repository": "https://github.com/Second-Last/tree-sitter-forge"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
